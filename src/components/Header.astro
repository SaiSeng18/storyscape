---
import { Image } from "astro:assets";
---

<header class="w-full flex justify-between items-center h-16 mb-10 xl:h-14">
	<div class="flex-1 h-full md:hidden">
		<button
			class="px-10 h-full border-2 font-medium rounded-full border-black w-fit"
			>Partnership</button
		>
	</div>

	<div class="h-full flex-1 flex justify-center items-center">
		<a href="" class="text-5xl text-center font-bold lg:text-3xl">StoryScape</a>
	</div>

	<div class="h-full flex-1">
		<div class="flex items-center h-full flex-1 justify-end">
			<button
				class="px-5 h-full border-2 font-medium rounded-full border-black mr-5 text-nowrap 2xl:px-2 2xl:text-sm"
				>Subscribe Now</button
			>

			<button
				class="px-5 h-full border-2 font-medium rounded-full border-black bg-black text-white text-nowrap 2xl:px-2 2xl:text-sm xl:hidden"
				>Talk to Expert: Milana Smith</button
			>

			<div
				class="aspect-square object-contain h-full bg-black rounded-full overflow-hidden border-[5px] border-black block xl:hidden">
				<Image
					src="https://images.unsplash.com/photo-1517841905240-472988babdf9?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3Dpm "
					alt="People"
					class="object-contain"
					width={100}
					height={100}
					loading="eager"
				/>
			</div>
		</div>
	</div>
</header>
